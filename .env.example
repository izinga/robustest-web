# RobusTest Web - Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 3000)
PORT=3000

# Gin mode: debug, release, test (default: release)
GIN_MODE=release

# Domain for the application
DOMAIN=robustest.com

# =============================================================================
# PATHS
# =============================================================================

# Path to public assets directory (default: ./public)
ASSETS_PATH=./public

# =============================================================================
# CONTACT FORM / EMAIL (Optional)
# =============================================================================

# SendGrid API key for contact form emails
# SENDGRID_API_KEY=your-sendgrid-api-key

# Email address to receive contact form submissions
# CONTACT_EMAIL=hello@robustest.com

# From email address for outgoing emails
# FROM_EMAIL=noreply@robustest.com

# Enable email sending (true/false)
# EMAIL_ENABLED=false

# =============================================================================
# LOGGING
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log file path (leave empty for stdout)
# LOG_FILE_PATH=/var/log/robustest-web/app.log

# =============================================================================
# SECURITY
# =============================================================================

# Session secret for cookies (generate a random string)
# SESSION_SECRET=your-random-secret-key

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=https://robustest.com,https://www.robustest.com

# =============================================================================
# GOOGLE CLOUD (for GCE deployment)
# =============================================================================

# Google Cloud project ID
# GOOGLE_CLOUD_PROJECT=your-project-id

# GCE instance zone
# GCE_ZONE=us-west1-b

# =============================================================================
# ANALYTICS (Optional)
# =============================================================================

# Google Analytics tracking ID
# GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable debug mode (shows detailed errors)
DEBUG=false
